<div class="dogs-list">
    <h2>Our Dogs:</h2>
  
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Img</th>
                <th>Breed</th>
                <th>City</th>
                <th>Years</th>
                <th>Cost</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% dogsList.forEach(dog => { %>
                <tr>
                    <td><%= dog.name %></td>
                    <td><img src="<%= dog.img %>" alt="<%= dog.name %>" width="100"></td> <!-- Assuming 'dog.img' contains image URL -->
                    <td><%= dog.breed %></td>
                    <td><%= dog.city %></td>
                    <td><%= dog.years %></td>
                    <td>â‚¬<%= dog.cost.toFixed(2) %></td>
                    <td>
                        <% if (token) { %> 
                            <a href="/api/dogs/<%= dog.id %>" class="view-dog-btn">Details</a>
                        <% } else { %>
                            <button disabled title="You must be logged in to view details">Details</button>
                        <% } %>
                    </td>
                    <td>
                        <% if (token) { %>
                            <form action="/api/delete/<%= dog.id %>?_method=DELETE" method="POST" style="display:inline;">
                                <button type="submit" onclick="return confirm('Are you sure you want to delete this dog?');">Delete</button>
                            </form>
                        <% } else { %>
                            <button disabled title="You must be logged in to delete a dog">Delete</button>
                        <% } %>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>



